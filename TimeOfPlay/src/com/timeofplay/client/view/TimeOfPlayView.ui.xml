<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <g:TabLayoutPanel
    ui:field='outerPanel'
    barUnit='EM'
    barHeight='3'>
    <g:tab>
      <g:header>My Account</g:header>
      <g:ResizeLayoutPanel ui:field='accountTabPanel' height='100%'/>
    </g:tab>
    <g:tab>
      <g:header>My Circles</g:header>
      <g:ResizeLayoutPanel ui:field='circlesTabPanel' height='100%'/>
    </g:tab>
    <g:tab>
      <g:header>My Events</g:header>
      <g:ResizeLayoutPanel ui:field='eventsTabPanel' height='100%'/>
    </g:tab>
  </g:TabLayoutPanel>
</ui:UiBinder>