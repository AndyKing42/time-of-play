<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <g:VerticalPanel>
    <g:HorizontalPanel>
      <g:Label>User Id</g:Label>
      <g:TextBox ui:field='userLoginId'/>
      <g:Button ui:field='changePasswordButton'>Change Password</g:Button>
    </g:HorizontalPanel>
    <g:HorizontalPanel>
      <g:Label>Screen Name</g:Label>
      <g:TextBox ui:field='screenName'/>
    </g:HorizontalPanel>
  </g:VerticalPanel>
</ui:UiBinder>