<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:top='urn:import:com.timeofplay.client.widget'>
  <g:HeaderPanel>
    <top:UserEditorWidget ui:field='userEditorWidget'/>
    <g:ResizeLayoutPanel
      ui:field='contentPanel'
      height='100%'>
      <g:SplitLayoutPanel height='100%'>
        <g:west size='300'>
          <top:CircleUsersGridWidget ui:field='circleUsersGridWidget'/>
        </g:west>
        <g:center>
          <top:ActivitiesListWidget ui:field='activitiesListWidget'/>
        </g:center>
      </g:SplitLayoutPanel>
    </g:ResizeLayoutPanel>
  </g:HeaderPanel>
</ui:UiBinder>